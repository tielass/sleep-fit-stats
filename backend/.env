# Server Configuration
PORT=3001
NODE_ENV=development

# MongoDB Connection
MONGODB_URI=mongodb://localhost:27017/sleep-fit-stats

# JWT Authentication
JWT_SECRET=your_development_jwt_secret
JWT_EXPIRES_IN=7d

# Fitbit API Configuration
# You'll need to register your app at https://dev.fitbit.com/apps/new
FITBIT_CLIENT_ID=your_fitbit_client_id
FITBIT_CLIENT_SECRET=your_fitbit_client_secret
FITBIT_CALLBACK_URL=http://localhost:3001/api/auth/fitbit/callback

# Frontend URL
FRONTEND_URL=http://localhost:3000

# Session Configuration
SESSION_SECRET=your_development_session_secret
